<view class="container">
  <navigationBar id="navigationBar" color="{{color}}" title="{{title}}" back="{{false}}" background="{{barBg}}"></navigationBar>

  <view class="userinfo">
    <button 
      open-type="getUserInfo" 
      bindgetuserinfo="onGetUserInfo"
      class="userinfo-avatar"
      style="background-image: url({{avatarUrl}})"
      size="default"
    ></button>
    <view class="userinfo-nickname-wrapper">
      <button class="userinfo-nickname" bindtap="onGetOpenid">点击获取 openid</button>
    </view>
  </view>

  <text>\n</text>

  <view class="btn-area">
    <navigator url="../user-info/info?backStyle=simple" hover-class="navigator-hover">
      <button>填写具体信息</button>
    </navigator>

    <navigator url="../test/test" open-type="redirect"
    hover-class="other-navigator-hover">
      <button>Another</button>
    </navigator>
  </view>

  <view>
    
  </view>
</view>