/* pages/modal/modal.wxss */
.modal-mask{
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.5);
  z-index: 999;
}
.modal-content{
  display: flex;
  flex-direction: column;
  width: 70%;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 50rpx;
  text-align: center;
}
.main-content{
  flex: 1;
  height: 100%;
  overflow-y: hidden; 
  max-height: 80vh;
}